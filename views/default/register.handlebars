<div class="position-absolute container-fluid" style="top: 15%; z-index=9999;">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger alert-dismissable fade show auto-hide mt-2" role="alert">
                <strong>{{message}}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        {{/each}}
    {{/if}}
</div>

<div class="bg-dark">

    <div class="container topspace">
        <div class="page-desc mt-4">
            <h3 class="text-center text-white"><span class="badge badge-danger"><i class="fas fa-lock"></i>&nbsp;Register</span></h3>
            <h1 class="text-center text-white">Daftar Admin</h1>
            <p class="text-center text-white">Anda perlu mendapatkan <strong>kata kunci</strong> dari webmaster terlebih dahulu.</p>
        </div>
    </div>
    <div class="container pb-3">
        <div class="component">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-center">Sila isi semua maklumat</h5>
                </div>
                <div class="card-body">
                    <form method='post'>
                        <div class="form-group">
                            <label for="name">Nama</label>
                            <input type="text" id="name" placeholder="Nama" class="form-control" name="name" aria-describedby="namainfo" required>
                            <small id="namainfo" class="form-text text-info">Perlu diisi</small>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" placeholder="email" class="form-control" name="email" aria-describedby="emailinfo">
                            <small id="emailinfo" class="form-text text-info">Perlu diisi</small>
                        </div>
                        <div class="form-group">
                            <label for="telefon">Nombor Telefon</label>
                            <input type="text" id="telefon" placeholder="No. Telefon" name="noTelefon" class="form-control" aria-describedby="telefoninfo">
                            <small id="telefoninfo" class="form-text text-info">Perlu diisi</small>
                        </div>
                        <div class="form-group">
                            <label for="passwordone">Kata Laluan</label>
                            <input type="password" id="passwordone" placeholder="Kata Laluan (min.8)" name="password" minlength="8" class="form-control" aria-describedby="passwordinfo">
                        </div>
                        <div class="form-group">
                            <label for="passwordtwo">Ulang Kata Laluan</label>
                            <input type="password" id="passwordtwo" placeholder="Kata Laluan (min.8)" name="ulangKataLaluan" minlength="8" class="form-control">
                        </div>
                        <div class="darkside bg-dark">
                            <div class="form-group">
                                <label for="masterkey">Admin Key&nbsp;&nbsp;<i class="fas fa-key"></i></label>
                                <input type="password" id="masterkey" placeholder="Admin Key" name="AdminKey" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-block btn-outline-primary">Hantar</button>
                    </form>
                    <p class="text-center">Anda mempunyai akaun Admin ? Sila <a href="/login">login</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="btn-group dropup stickymenu">
        <button type="button" class="btn btn-secondary dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-align-right"></i>
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="#topPage">To Top</a>
        </div>
    </div>
</div>
