<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            <h3>Gambar Halaman Utama</h3>
        </div>
    </div>
    <div class="card">
        <div class='card-body'>
            <h3>Tambah Gambar / Video</h3>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Tajuk Utama:</label>
                    <input type="text" class="form-control" name="title" id="title">
                </div>
                <div class="form-group">
                    <label for="description">Penerangan :</label>
                    <input type="text" class="form-control" name="description" id="description">
                </div>
                <div class="form-group">
                    <label for='gambar'>Gambar/Video :</label>
                    <input type="file" class="form-control-file" name="fail" id="gambar" required>
                </div>
                <div class='p-2 text-body'>
                    <p>Jenis fail :</p>
                    <div class='form-check form-check-inline'>
                        <input type="checkbox" id='video' name="video" class="form-check-input">
                        <label class="form-check-label" for="video">Video</label>
                    </div>
                    <div class='form-check form-check-inline'>
                        <input type="checkbox" id='gambar' name="gambar" class="form-check-input">
                        <label class="form-check-label" for="gambar">Gambar</label>
                    </div>
                </div>
                <button class="btn btn-primary btn-block">&#43;&nbsp;Tambah halaman utama</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <div class="row">
            {{#each home}}
                <div class='col-md-6'>
                    <div class="card">
                        <img class="img-fluid card-img-top" src={{fail}} alt="aktiviti Kolej Perindu">
                        <div class="card-body">
                            <form action="/admin/home/kemaskini/{{_id}}?newMethod=PUT" method="post">
                                <div class="form-group">
                                    <label for="title">Tajuk Utama</label>
                                    <textarea placeholder="Tajuk Utama" name="title" id="tajuk" class="form-control" rows="1">{{title}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="description">Penerangan</label>
                                    <textarea placeholder="Penerangan" name="description" id="description" class="form-control" rows="1">{{description}}</textarea>
                                </div>
                                <div class="form-check card-body">
                                    {{#if video}}
                                        <div class='form-check form-check-inline'>
                                            <input type="checkbox" id="video" name="video" class="form-check-input" value={{video}} checked>
                                            <label class="form-check-label" for="video">Video</label>
                                        </div>
                                        <div class='form-check form-check-inline'>
                                            <input type="checkbox" id="gambar" name="gambar" class="form-check-input" value={{gambar}}>
                                            <label class="form-check-label" for="gambar">Gambar</label>
                                        </div>
                                    {{else}}
                                        {{#if gambar}}
                                            <div class='form-check form-check-inline'>
                                                <input type="checkbox" id="video" name="video" class="form-check-input" value={{video}}>
                                                <label class="form-check-label" for="video">Video</label>
                                            </div>
                                            <div class='form-check form-check-inline'>
                                                <input type="checkbox" id="gambar" name="gambar" class="form-check-input" value={{gambar}} checked>
                                                <label class="form-check-label" for="gambar">Gambar</label>
                                            </div>
                                        {{else}}
                                            <div class='form-check form-check-inline'>
                                                <input type="checkbox" id="video" name="video" class="form-check-input" value={{video}}>
                                                <label class="form-check-label" for="video">Video</label>
                                            </div>
                                            <div class='form-check form-check-inline'>
                                                <input type="checkbox" id="gambar" name="gambar" class="form-check-input" value={{gambar}}>
                                                <label class="form-check-label" for="gambar">Gambar</label>
                                            </div>
                                        {{/if}}
                                    {{/if}}
                                    {{#if aktif}}
                                        <div class='form-check form-check-inline'>
                                            <input type="checkbox" id="aktif" name="aktif" class="form-check-input" value={{aktif}} checked>
                                            <label class="form-check-label" for="gambar">Aktif ?</label>
                                        </div>
                                    {{else}}
                                        <div class='form-check form-check-inline'>
                                            <input type="checkbox" id="aktif" name="aktif" class="form-check-input" value={{aktif}}>
                                            <label class="form-check-label" for="gambar">Aktif ?</label>
                                        </div>
                                    {{/if}}

                                </div>
                                <button type='submit' class='btn btn-primary btn-block'>Tukar</button>
                            </form>

                            <form class="m-2" action="/admin/home/padam/{{_id}}?newMethod=DELETE" method="post">
                                <button onclick="return confirm('Adakah anda ingin memadam kandungan ini?');" type="submit" class="btn btn-danger btn-block">Padam</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

</div>
