<div class="container-fluid">
    <a href="/admin/aktiviti" class="btn btn-secondary mb-2 btn-block text-white"><i class="fas fa-reply"></i>&nbsp;Kembali</a>
    <div class="card">
        <div class='card-header'>
            <h3>Kemaskini Aktiviti</h3>
        </div>
    </div>

    <div class='card'>
        <div class="card-body">
            <form action="/admin/aktiviti/kemaskini/{{aktiviti._id}}?newMethod=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="tajuk">Tajuk</label>
                    <textarea placeholder="Tajuk" name="tajuk" id="tajuk" class='form-control' rows="1" required>{{aktiviti.tajuk}}</textarea>
                </div>
                <div class="form-group">
                    <label for="penerangan">Penerangan</label>
                    <textarea placeholder="Penerangan" name="penerangan" id="penerangan" class="form-control" required>{{aktiviti.penerangan}}</textarea>
                </div>
                <div class='form-check'>
                    <input type="checkbox" id='diakses' name="diakses" class="form-check-input" value={{aktiviti.diakses}} checked>
                    <label class="form-check-label" for="bolehDilihat">Boleh diakses?</label>
                </div>
                <div class='form-group'>
                    <label for='kataLaluan1'>Kata Laluan Pertama</label>
                    <textarea id='kataLaluan1' rows="1" class='form-control' name='kataLaluan1' required>{{aktiviti.kataLaluan1}}</textarea>
                </div>
                <div class='form-group'>
                    <label for='kataLaluan2'>Kata Laluan Kedua</label>
                    <textarea id='kataLaluan2' rows="1" class='form-control' name='kataLaluan2' required>{{aktiviti.kataLaluan2}}</textarea>
                </div>
                <button class='btn btn-block btn-primary' type='submit'> Kemaskini Aktiviti</button>
            </form>
        </div>
    </div>
</div>