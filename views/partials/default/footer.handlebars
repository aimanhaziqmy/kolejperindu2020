<script>
    const semuaberita = document.querySelector('.berita-items').children;
    const prev = document.querySelector('.prev');
    const next = document.querySelector('.next');
    const page = document.querySelector('.num');
    const maxItems = 6;
    let index = 1;


    const pagination = Math.ceil(semuaberita.length / maxItems);

    prev.addEventListener("click", function() {
        index--;
        check();
        showItems();
    });

    next.addEventListener("click", function() {
        index++;
        check();
        showItems();
    });

    function check() {
        if (index == pagination) {
            next.classList.add('disable');
        } else {
            next.classList.remove('disable');
        }

        if (index == 1) {
            prev.classList.add('disable');
        } else {
            prev.classList.remove('disable');
        }
    }

    function showItems() {
        for (let i = 0; i < semuaberita.length; i++) {
            semuaberita[i].classList.remove('show');
            semuaberita[i].classList.add('hide');

            if (i >= (index * maxItems) - maxItems && i < index * maxItems) {
                semuaberita[i].classList.remove('hide');
                semuaberita[i].classList.add('show');
            }
            page.innerHTML = index;
        }


    }

    window.onload = function() {
        showItems();
        check();
    }

    function Progression() {
        var progression = document.getElementById('progression');
        progression.classList.add('showprogress');
        progression.classList.remove('hideprogress');
        setTimeout(endProgression, 100000);
    }

    function endProgression() {
        var progression = document.getElementById('progression');
        progression.classList.remove('showprogress');
        progression.classList.add('hideprogress');
    }

    function Wrapping() {
        var defaultBody = document.getElementById('wrapper');
        defaultBody.classList.add('greywrap');
    }

    var typed = new Typed('#typed', {
    stringsElement: '#typed-strings',
    typeSpeed: 40,
    backSpeed: 10,
    loop: true
    });

</script>
